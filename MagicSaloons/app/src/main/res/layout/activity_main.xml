<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             android:background="@drawable/background"
                                             tools:context=".MainActivity"
                                             tools:layout_editor_absoluteX="0dp"
                                             tools:layout_editor_absoluteY="81dp">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="365dp"
        android:layout_height="212dp"
        app:srcCompat="@drawable/logo"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"/>

    <Button
        android:id="@+id/button1"
        style="@android:style/Widget.Holo.Button.Small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="16dp"
        android:backgroundTint="@color/primary_darker"
        android:elevation="0dp"
        android:isScrollContainer="true"
        android:text="Despre Noi"
        android:textColor="@color/accent"
        android:textStyle="bold"
        android:typeface="normal"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBaseline_toBaselineOf="@+id/button6"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/button5"
        android:layout_marginRight="0dp"/>

    <Button
        android:id="@+id/button2"
        style="@android:style/Widget.Holo.Button.Small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/primary_darker"
        android:text="Produse &amp; Servicii"
        android:textStyle="bold"
        android:typeface="normal"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/button6"
        android:layout_marginRight="32dp"
        app:layout_constraintRight_toRightOf="@+id/button6"
        app:layout_constraintBaseline_toBaselineOf="@+id/button9"
        app:layout_constraintHorizontal_bias="0.493"/>

    <Button
        android:id="@+id/button3"
        style="@android:style/Widget.Holo.Button.Small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/primary_darker"
        android:text="Contact"
        android:textStyle="bold"
        android:typeface="normal"
        android:layout_marginRight="7dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBaseline_toBaselineOf="@+id/button1"/>

    <Button
        android:id="@+id/button5"
        style="@android:style/Widget.Holo.Button.Small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="16dp"
        android:backgroundTint="@color/primary_darker"
        android:isScrollContainer="true"
        android:text="Galerie"
        android:textColor="@color/accent"
        android:textStyle="bold"
        android:typeface="normal"
        app:layout_constraintLeft_toLeftOf="@+id/button1"
        android:layout_marginRight="24dp"
        app:layout_constraintRight_toRightOf="@+id/button1"
        app:layout_constraintBaseline_toBaselineOf="@+id/button2"
        app:layout_constraintHorizontal_bias="1.0"/>

    <Button
        android:id="@+id/button6"
        style="@android:style/Widget.Holo.Button.Small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/primary_darker"
        android:text="Newsletter"
        android:textStyle="bold"
        android:typeface="normal"
        app:layout_constraintLeft_toRightOf="@+id/button1"
        android:layout_marginLeft="8dp"
        app:layout_constraintRight_toLeftOf="@+id/button7"
        android:layout_marginRight="8dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/button7"
        app:layout_constraintHorizontal_bias="0.529"/>

    <Button
        android:id="@+id/button7"
        style="@android:style/Widget.Holo.Button.Small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="8dp"
        android:backgroundTint="@color/primary_darker"
        android:text="Oferte"
        android:textStyle="bold"
        android:typeface="normal"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintRight_toLeftOf="@+id/button3"
        android:layout_marginRight="8dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/button1"/>

    <Button
        android:id="@+id/button8"
        style="@android:style/Widget.Holo.Button.Small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:backgroundTint="@color/primary_darker"
        android:text="Blog"
        android:textStyle="bold"
        android:typeface="normal"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/button3"
        android:layout_marginRight="0dp"
        app:layout_constraintRight_toRightOf="@+id/button3"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/button3"/>

    <Button
        android:id="@+id/button9"
        style="@android:style/Widget.Holo.Button.Small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:backgroundTint="@color/primary_darker"
        android:text="Angajari"
        android:textStyle="bold"
        android:typeface="normal"
        android:layout_marginLeft="32dp"
        app:layout_constraintLeft_toLeftOf="@+id/button7"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="@+id/button7"
        app:layout_constraintBaseline_toBaselineOf="@+id/button8"
        app:layout_constraintHorizontal_bias="0.534"/>

    <Button
        android:id="@+id/button4"
        style="@android:style/Widget.Holo.Button.Small"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:backgroundTint="@color/primary_darker"
        android:text="Logout"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView"
        app:layout_constraintVertical_bias="1.0"/>

</android.support.constraint.ConstraintLayout>
